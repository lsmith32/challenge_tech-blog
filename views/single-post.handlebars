<article class="post w3-margin-top">
    <div class="title w3-blue-grey ">
        <div class="w3-container w3-padding-16 w3-text-light-grey">{{post.title}} 
            <span class="w3-right-align w3-text-light-grey">(Posted by {{user.username}} at {{post.created_at}})</span>
        </div>
    </div>
    <div>
        <p class="w3-container">{{post.post_content}}</p>
    </div>
</article>
{{#if loggedIn}}
    <form class="comment-form">
        <h4 class="w3-container">Add comments below:</h4>
        <div>
            <textarea name="comment-body"></textarea>
        </div>
        <div>
            <button type="submit">add comment</button>
        </div>
    </form>
{{/if}}

<div class="comments">
    {{#each post.comments}}
        <section class="comment">
            <div class="meta">
                {{user.username}} on {{created_at}}
            </div>
            <div class="text">
                {{comment_text}}
            </div>
        </section>
    {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}
<article>
    <a href="/feed"> &larr; Back to feed</a>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="edit-post-title" name="post-title" value="{{post.title}}" />
        </div>
        <div>
            <label for="post_content">Blog Post</label>
            <textarea type="text" id="edit-post_content" name="post_content">{{post.post_content}}</textarea>
        </div>
        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn">Delete post</button>
    </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>